<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<script defer src="/logged-in/layout/layout.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

		<link
			rel="stylesheet"
			href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
		/>
		<script
			src="https://kit.fontawesome.com/d13ba36e90.js"
			crossorigin="anonymous"
		></script>
		<link rel="stylesheet" href="logged-in/layout/layout.css" />
		<link rel="stylesheet" href="/messages.css" />
		<title>Ticket Scout</title>
	</head>
	<body>
		<div class="page-container">
			<div class="sidebar">
				<div class="sidebar-brand">
					<div class="brand-flex">
						<h2>TicketScout</h2>
						<!--ADD SVG LOGO HERE-->
						<!-- <div class="brand-icons">
							<span
								id="user-profile-icon"
								class="las la-user-circle"
							></span>
						</div> -->
					</div>
				</div>

				<div class="sidebar-menu">
					<nav>
						<ul id="navList">
							<li class="menu-item">
								<a href="dashboard" class="menu-link">
									<span>
										<i class="fas fa-house-user"></i>
									</span>
									Dashboard
								</a>
							</li>
							<li class="menu-item">
								<a href="tickets" class="menu-link">
									<span
										><i class="fas fa-clipboard-list"></i
									></span>
									Tickets
								</a>
							</li>
							<li class="menu-item">
								<a href="" class="menu-link">
									<span><i class="fas fa-user"></i></span>
									Customers
								</a>
							</li>
							<li class="menu-item">
								<a href="" class="menu-link">
									<span><i class="fas fa-toolbox"></i></span>
									Parts
								</a>
							</li>
							<li class="menu-item">
								<a href="" class="menu-link">
									<span
										><i class="fas fa-file-invoice"></i
									></span>
									Invoices
								</a>
							</li>
							<li class="menu-item">
								<a href="" class="menu-link">
									<span><i class="fas fa-wallet"></i></span>
									Estimates
								</a>
							</li>
							<br />
							<hr color="#b4becc" size="1" />
							<!-- <% if(user.admin) {%>

							<li class="menu-item">
								<a href="" class="menu-link">
									<span><i class="fas fa-toolbox"></i></span>
									Parts
								</a>
							</li>
							<li class="menu-item">
								<a href="" class="menu-link">
									<span
										><i class="fas fa-file-invoice"></i
									></span>
									Invoices
								</a>
							</li>
							<li class="menu-item">
								<a href="" class="menu-link">
									<span><i class="fas fa-wallet"></i></span>
									Estimates
								</a>
							</li> -->
						</ul>
					</nav>
					<% } %>
				</div>

			</div>
		</div>
		<div class="main-content">
			<header>
				<div class="search-box">
					<form action="/create-new" method="POST" id="search-result-form">
						<input type="text" placeholder="Search for anything" name="search"/>
					</form>
					<span><i class="fa fa-search"></i></span>
					<div class="create-new">
						<i class="fas fa-plus-square"></i>
					</div>
					<div class="create-new-dropdown">
						<ul>
							<a href="new-ticket" >
								<li id="new_ticket">Ticket</li>
							</a>
							<a href="new-customer">
								<li id="new_customer">Customer</li>
							</a>
							<a href="new-invoice">
								<li id="new_invoice">Invoice</li>
							</a>
							<a href="new-estimate">
								<li id="new_estimate">Estimate</li>
							</a>
						</ul>
					</div>
				</div>
				<div class="date-wrap">
					<i class="far fa-calendar-alt"></i>
					<p>Today <span id="current-date"></span></p>
				</div>
				<div class="profile-wrap">
					<div>
						<div id="time-clock" class="clock-box">
							<i class="fas fa-user-clock"></i>
						</div>
						<div class="clock-settings-wrap">
							<div class="time-settings">
								<label class="label" for=""
									>Clock-Out Time</label
								>
								<input
									class="update-account-input"
									class="clock-out-time"
									type="time"
									required
								/>
							</div>
							<div class="time-submit">
								<form action="">
									<button class="clock-in-btn" type="submit">
										<i class="fas fa-check"></i>
									</button>
								</form>
							</div>
						</div>
					</div>

					<div class="initial-box">
						<%= (user.fullname.split(' ')[0][0] +
						user.fullname.split(' ')[1][0]).toUpperCase() %>
					</div>
					<div class="name-wrap">
						<h5><%= user.fullname.split(" ")[0].charAt(0).toUpperCase() + user.fullname.split(" ")[0].substring(1) + " " + user.fullname.split(" ")[1].charAt(0).toUpperCase() + user.fullname.split(" ")[1].substring(1)%></h5>
						<small><%= user.email%></small>
					</div>
					<div class="icon-wrap">
						<i id="arrow" class="las la-angle-down"></i>
					</div>
				</div>
				<div class="dropdown">
					<ul>
						<a href="account-settings" class="">
							<li id="acc-settings">Account Settings</li>
						</a>
						<a href="logout" >
							<li id="logout">Logout</li>
						</a>
					</ul>
				</div>
			</header>
		</div>
		<%- body %>
	</body>
</html>
