<link rel="stylesheet" href="/logged-in/dashboard/dashboard.css" />
<script defer src="/logged-in/dashboard/dashboard.js"></script>
<body>
	<div class="main-content">
		<main>
			<div class="page-header">
				<div>
					<h1 id="greeting">
						<%= user.fullname.split(" ")[0].charAt(0).toUpperCase()+
						user.fullname.split(" ")[0].substring(1)%>
					</h1>
					<small
						>See whats happening in your ticketScout account
						today</small
					>
				</div>
			</div>

			<div class="cards-master-layout">
				<div class="cards-master-left">
					<div class="top-cards-layout">
						<div class="card1 top-card-style">
							<span><i class="fas fa-ticket-alt fa-3x"></i></span>
							<div class="info-wrap">
								<p>NEW TICKETS</p>
								<h4>24</h4>
							</div>
						</div>
						<div class="card2 top-card-style">
							<span><i class="fas fa-comments fa-3x"></i></span>
							<div class="info-wrap">
								<p>REPLIES</p>
								<h4>24</h4>
							</div>
						</div>
						<div class="card3 top-card-style">
							<span><i class="fas fa-concierge-bell fa-3x"></i></span>
							<div class="info-wrap">
								<p>PRIORITY</p>
								<h4>24</h4>
							</div>
						</div>
					</div>
					<div class="recent-tickets-layout">1</div>
					<div class="changeMyName-layout">1</div>
				</div>
				<div class="cards-master-right">
					<div class="right-card-top c-m-innerLayout">top</div>
					<div class="right-card-bottom c-m-innerLayout">bottom</div>
				</div>
			</div>
		</main>
	</div>
</body>
